# API Settings
API_V1_STR=/api/v1  # Base path for all API v1 endpoints
PROJECT_NAME=AI Foundation RAG API  # Name of the project used in API documentation

# CORS Settings
# List of allowed origins for Cross-Origin Resource Sharing
# Use ["*"] to allow all origins (not recommended for production)
# Format: JSON array of strings or comma-separated values
# Example: ["http://localhost:3000", "https://your-domain.com"]
CORS_ORIGINS=["http://localhost:3000", "https://your-production-domain.com"]

# Vector Database Settings
SERVICE_PINECONE_API_KEY=your-pinecone-api-key
SERVICE_PINECONE_ENVIRONMENT=your-pinecone-environment
SERVICE_PINECONE_INDEX_NAME=your-pinecone-index-name

# OpenAI Settings
SERVICE_OPENAI_API_KEY=your-openai-api-key 
SERVICE_OPENAI_EMBEDDING_MODEL=your-openai-embedding-model 